@page
@model PersonalWeb_Razor.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                CATEGORY LIST
            </h2>
        </div>
        <div class="col-6 tetx-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                Add Category <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Category Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList)
            {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    Edit <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    Delete <i class="bi bi-x-circle"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>