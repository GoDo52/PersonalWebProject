<div class="container mt-5">
    <div class="col-12 d-flex justify-content-end mb-4">
        <a class="btn btn-primary" asp-area="Customer" asp-controller="Home" asp-action="Index">
            Back <i class="bi bi-arrow-left-circle"></i>
        </a>
    </div>
    <div class="row justify-content-center">
        <!-- Edit Account -->
        <div class="col-md-6 mb-4">
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Account" asp-action="Edit">
                <div class="card text-white bg-dark">
                    <div class="card-body text-center">
                        <h4 class="card-title">Edit</h4>
                        <p class="card-text">Edit your account information</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Logout box -->
        <div class="col-md-6 mb-4">
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Account" asp-action="Logout">
                <div class="card text-white bg-dark">
                    <div class="card-body text-center">
                        <h4 class="card-title">Logout</h4>
                        <p class="card-text">You will get back to login menu</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Current month spending and previous month total spendings -->
        <div class="row">
            <div class="col-md-6">
                <div class="card text-white bg-info shadow-sm mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Spendings (Current Month)</h5>
                        <p class="card-text">
                            <!-- Dynamically populated -->
                            Total: <strong>@TempData["TotalSpendCurrMonth"]</strong>
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card text-white bg-info shadow-sm mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Spendings (Previous Month)</h5>
                        <p class="card-text">
                            <!-- Dynamically populated -->
                            Total: <strong>@TempData["TotalSpendPrevMonth"]</strong>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}