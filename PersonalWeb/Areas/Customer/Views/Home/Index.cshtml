@{
    ViewData["Title"] = "Sle1n";
    string adminRole = Personal.Utility.SD.AdminRole;
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Add Spending -->
        <div class="col-md-6 mb-4">
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Spending" asp-action="Upsert">
                <div class="card text-white bg-dark">
                    <div class="card-body text-center">
                        <h4 class="card-title">Add Spending</h4>
                        <p class="card-text">Create a new spending</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Spendings Box -->
        <div class="col-md-6 mb-4">
            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Spending" asp-action="Index">
                <div class="card text-white bg-dark">
                    <div class="card-body text-center">
                        <h4 class="card-title">Spendings</h4>
                        <p class="card-text">Track and view your spendings</p>
                    </div>
                </div>
            </a>
        </div>

        @if (User.IsInRole(adminRole))
        {
            <!-- Categories Box -->
            <div class="col-md-6 mb-4">
               <a class="nav-link text-dark" asp-area="Admin" asp-controller="Category" asp-action="Index">
                    <div class="card text-white bg-dark">
                        <div class="card-body text-center">
                            <h4 class="card-title">Categories</h4>
                            <p class="card-text">Manage your spending categories</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Users Box -->
            <div class="col-md-6 mb-4">
               <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action="Index">
                    <div class="card text-white bg-dark">
                        <div class="card-body text-center">
                            <h4 class="card-title">Users</h4>
                            <p class="card-text">Manage users</p>
                        </div>
                    </div>
                </a>
            </div>
        }
        
        <!-- Account Box -->
        <div class="col-md-6 mb-4">
           <a class="nav-link text-dark" asp-area="Customer" asp-controller="Account" asp-action="Index">
                <div class="card text-white bg-dark">
                    <div class="card-body text-center">
                        <h4 class="card-title">Account</h4>
                        <p class="card-text">Manage your account</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>